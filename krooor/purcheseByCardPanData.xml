<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@color/indigo_500">

    <TextView
            android:text="Enter Expiry Date"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/amountLabel2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:padding="10dp" android:background="#FF9800"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout" android:layout_marginTop="44dp"/>
    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:id="@+id/textInputLayout"
            app:layout_constraintTop_toBottomOf="@+id/amountLabel"
            android:background="@android:color/white" app:layout_constraintHorizontal_bias="0.0">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:hint="PAN" android:id="@+id/phone" android:inputType="numberSigned"/>
    </com.google.android.material.textfield.TextInputLayout>
    <Button
            android:text="Use Card reader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:background="@android:color/white"
            android:layout_marginBottom="416dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Pay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button2" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:background="#FF9800"
            android:layout_marginBottom="340dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button"/>
    <TextView
            android:text="Enter PAN Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/amountLabel" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            android:padding="10dp" android:background="#FF9800"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/editText2"
            android:background="@android:color/white" android:layout_marginTop="48dp"
            app:layout_constraintTop_toTopOf="@+id/amountLabel2"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>